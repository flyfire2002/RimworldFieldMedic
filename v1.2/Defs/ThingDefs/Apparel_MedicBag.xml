<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_flyfire2002_MedicBag</defName>
    <label>medic bag</label>
    <description>A bag filled with medicines. Wearer can stabilize downed pawns so that there is more time to move the pawn to proper facilities.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>MedicineProduction</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
        <Medicine>4</Medicine>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/MedicBag/MedicBag</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>3</Mass>
      <MarketValue>425.0</MarketValue>
      <Flammability>0.6</Flammability>
      <EquipDelay>1.5</EquipDelay>
      <DeteriorationRate>1</DeteriorationRate>
    </statBases>
    <thingClass>FieldMedic.Apparel_flyfire2002_MedicBag</thingClass>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <MedicineIndustrial>5</MedicineIndustrial>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>    
    <comps Inherit="False">
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <apparel>
      <careIfWornByCorpse>true</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <wornGraphicPath>Things/Apparel/MedicBag/MedicBag</wornGraphicPath>
      <!-- Thanks to steam user doc776 for providing the following fix that
           deals with the huge bag render glitch with RW 1.2. -->
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <offset>(-0.15,-0.25)</offset>
          <hulk>
            <offset>(-0.0,-0.15)</offset>
          </hulk>
          <fat>
            <offset>(-0.0,-0.0)</offset>
          </fat>
          <thin>
            <offset>(0.10,-0.0)</offset>
          </thin>
        </north>
        <south>
          <offset>(0.15,-0.20)</offset>
          <hulk>
            <offset>(-0.0,-0.10)</offset>
          </hulk>
          <fat>
            <offset>(0.1,-0.0)</offset>
          </fat>
          <thin>
            <offset>(-0.10,-0.0)</offset>
          </thin>
        </south>
        <east>
          <offset>(-0.15,-0.25)</offset>
          <hulk>
            <offset>(-0.0,-0.15)</offset>
          </hulk>
          <fat>
            <offset>(-0.10,-0.10)</offset>
          </fat>
        </east>
        <west>
          <offset>(0.15,-0.25)</offset>
          <hulk>
            <offset>(-0.0,-0.15)</offset>
          </hulk>
          <fat>
            <offset>(-0.0,-0.10)</offset>
          </fat>
        </west>
        <male>
          <scale>(0.4,0.4)</scale>
        </male>
        <female>
          <scale>(0.4,0.4)</scale>
        </female>
        <thin>
          <scale>(0.4,0.4)</scale>
        </thin>
        <hulk>
          <scale>(0.5,0.5)</scale>
        </hulk>
        <fat>
          <scale>(0.5,0.5)</scale>
        </fat>
      </wornGraphicData>
      <tags>
        <li>IndustrialMedic</li>
      </tags>
    </apparel>
  </ThingDef>
</Defs>