    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <wornGraphicPath>Things/Apparel/MedicBag/FlakVest</wornGraphicPath><!-- Use flak vest as place holder -->
